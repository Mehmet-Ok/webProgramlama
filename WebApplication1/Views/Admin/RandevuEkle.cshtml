@model RandevuViewModel
@{
	ViewData["Tittle"] = "Randevu";
}

<div class="row">
	<div class="col-4 offset-4">
		<hi class="display-4 border-bottom text-center ">@ViewData["Tittle"]</hi>
	</div>
</div>

<div class="row">
	<div class="col-4 offset-4 pt-2">
		<form method="post">
			<div asp-validation-summary=ModelOnly class="text-danger small"></div>

			<div class="form-group mb-3">
				<label asp-for="RandevuId" class="form-label">RandevuId</label>
				<input asp-for="RandevuId" class="form-control" placeholder="RandevuId" />
				<span asp-validation-for="RandevuId" class="text-danger small"></span>
			</div>

			<div class="form-group mb-3">
				<label asp-for="PoliId" class="form-label">Poli no</label>
				<input asp-for="PoliId" class="form-control" placeholder="" />
				<span asp-validation-for="PoliId" class="text-danger small"></span>
			</div>

			<div class="form-group mb-3">
				<label asp-for="DoktorId" class="form-label">DoktorId</label>
				<input asp-for="DoktorId" class="form-control" placeholder="DoktorId" />
				<span asp-validation-for="DoktorId" class="text-danger small"></span>
			</div>

			<div class="form-group mb-3">
				<label asp-for="RandevuTarih" class="form-label">RandevuTarih</label>
				<input asp-for="RandevuTarih" class="form-control" placeholder="RandevuTarih" />
				<span asp-validation-for="RandevuTarih" class="text-danger small"></span>
			</div>

			<div class="form-group mb-3">
				<label asp-for="RandevuSaat" class="form-label">RandevuSaat</label>
				<input asp-for="RandevuSaat" class="form-control" />
				<span asp-validation-for="RandevuSaat" class="text-danger small"></span>
			</div>

			<div class="form-group mb-3 d-grid">
				<button type="submit">EKLE</button>
				@* <button type="submit" class="btn btn-primary d-block "><i class="fa-solid fa-arrow-right-to-bracket"></i>Register</button> *@
			</div>
		</form>
	</div>
</div>