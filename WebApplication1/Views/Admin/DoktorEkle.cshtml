@model DoktorViewModel
@{
	ViewData["Tittle"] = "Doktor";
}

<div class="row">
	<div class="col-4 offset-4">
		<hi class="display-4 border-bottom text-center ">@ViewData["Tittle"]</hi>
	</div>
</div>

<div class="row">
	<div class="col-4 offset-4 pt-2">
		<form method="post">
			<div asp-validation-summary=ModelOnly class="text-danger small"></div>

			<div class="form-group mb-3">
				<label asp-for="DoktorId" class="form-label">Doktor id</label>
				<input asp-for="DoktorId" class="form-control" placeholder="" />
				<span asp-validation-for="DoktorId" class="text-danger small"></span>
			</div>

			<div class="form-group mb-3">
				<label asp-for="DoktorName" class="form-label">Doktor ad</label>
				<input asp-for="DoktorName" class="form-control" />
				<span asp-validation-for="DoktorName" class="text-danger small"></span>
			</div>

			<div class="form-group mb-3">
				<label asp-for="PoliName" class="form-label">Poli ad</label>
				<input asp-for="PoliName" class="form-control" />
				<span asp-validation-for="PoliName" class="text-danger small"></span>
			</div>

			<div class="form-group mb-3 d-grid">
				<button type="submit">EKLE</button>
				@* <button type="submit" class="btn btn-primary d-block "><i class="fa-solid fa-arrow-right-to-bracket"></i>Register</button> *@
			</div>
		</form>
	</div>
</div>